<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Stars:</strong>
    <%= @restaurant.phone_number %>
  </p>

  <p>
    <strong>Chef:</strong>
    <%= @restaurant.category %>
  </p>

  <h3>Reviews:</h3>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.content %>
      </li>
    <% end %>
  </ul>


  <%= link_to 'Add new Review', new_restaurant_review_path(@restaurant) %>
  <%= link_to 'Back', restaurants_path %>
</div>
