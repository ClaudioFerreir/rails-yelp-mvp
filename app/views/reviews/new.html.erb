<div class="container">
  <h1>Add Review to restaurant <%= @restaurant.name %></h1>


  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (1..5) %>
    <%= f.button :submit, class: 'class: btn btn-outline-primary' %>
  <% end %>
</div>
